<Window x:Class="LocalDeepSeek.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDeepSeek.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1000"
        Width="1400"
        Style="{StaticResource WindowStyle}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="0, 0, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="56"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Deleteボタン -->
                <Button x:Name="DeleteButton"
                        Grid.Column="0"
                        Content="Delete"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Background="{StaticResource CustomRedColor}"
                        Click="DeleteButton_Click"/>

                <!-- Newボタン -->
                <Button x:Name="NewButton"
                        Grid.Column="2"
                        Content="New"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Background="{StaticResource CustomGreenColor}"
                        Click="NewButton_Click"/>
            </Grid>

            <!-- ChatHistoryクラスのListをバインド -->
            <ListView x:Name="HistoryListView"
                  Grid.Row="1"
                  SelectionChanged="HistoryListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBox Text="{Binding Title}"
                                 GotFocus="TextBox_GotFocus"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Logoutボタン -->
            <Button x:Name="LogoutButton"
                    Grid.Row="3"
                    Content="Logout"
                    FontSize="20"
                    Margin="0, 0, 0, 3"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource CustomBlueColor}"
                    Click="LogoutButton_Click"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" MinHeight="36" MaxHeight="150"/>
            </Grid.RowDefinitions>

            <!-- MessageクラスのListをバインド-->
            <ListView x:Name="MessageListView"
                      Grid.Row="0"
                      Margin="0, 0, 0, 20"
                      Width="Auto">

                <!-- ItemのStyle -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Width" Value="Auto"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Stretch"
                                    Width="Auto">
                            <TextBox Text="{Binding Content}"
                                     Width="Auto"
                                     TextWrapping="Wrap"
                                     FontSize="20">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <!-- Human or AIによってUIを分岐 -->
                                            <DataTrigger Binding="{Binding IsHuman}" Value="1">
                                                <Setter Property="Foreground" Value="{StaticResource CustomBlueColor}"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="Margin" Value="0, 0, 20, 0"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsHuman}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource CustomGreenColor}"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="20, 0, 0, 0"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- ユーザ入力TextBox -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="UserInputTextBox"
                     Width="Auto"
                     TextWrapping="Wrap"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     MaxHeight="150"
                     Padding="0, 0, 30, 0"/>
            </ScrollViewer>

            <!-- Chat送信ボタン -->
            <Button x:Name="ChatButton"
                    Grid.Row="1"
                    Content="↑"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0, 0, 11, 0"
                    Click="ChatButton_Click"/>
        </Grid>

    </Grid>

</Window>
