<Window x:Class="LocalDeepSeek.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDeepSeek.Views"
        mc:Ignorable="d"
        Title="LoginWindow"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleTextBlock"
                   Grid.Row="0"
                   Text="ログイン"
                   FontSize="24"
                   FontWeight="Bold"/>

        <TextBlock x:Name="UsernameTextBlock"
                   Grid.Row="1"
                   Text="ユーザー名"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"/>

        <TextBox x:Name="UsernameTextBox"
                 Grid.Row="2"
                 Margin="0, 6, 0, 6"/>

        <TextBlock x:Name="PasswordTextBlock"
                   Grid.Row="3"
                   Text="パスワード"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"/>

        <TextBox x:Name="PasswordTextBox"
                 Grid.Row="4"
                 Margin="0, 6, 0, 6"/>



        <Grid Grid.Row="5"
              Margin="0, 10, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ToggleButton x:Name="NewUserToggleButton"
                          Grid.Column="0"
                          Content="新規作成" />

            <Button x:Name="LoginButton"
                    Grid.Column="2"
                    Content="ログイン"
                    Click="LoginButton_Click"/>
        </Grid>

        <TextBlock x:Name="PasswordResetTextBlock"
                   Grid.Row="6"
                   Text="パスワードをお忘れですか"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Cursor="Hand"
                   Foreground="{StaticResource CustomBlueColor}"/>



    </Grid>


</Window>
