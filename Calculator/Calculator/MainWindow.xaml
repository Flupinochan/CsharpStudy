<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1列目 -->
        <Label x:Name="expressionLabel"
               Content=""
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="4"
               />

        <!-- 2列目 -->
        <Label x:Name="resultLabel"
               Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"
               Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="4"/>

        <!-- 3列目 -->
        <Button x:Name="allClearButton"
                Click="allClearButton_Click"
                Content="AC"
                Margin="5"
                Grid.Row="2"
                Grid.Column="0"/>

        <Button x:Name="squareButton"
                Click="operationButton_Click"
                Content="x²"
                Margin="5"
                Grid.Row="2"
                Grid.Column="1"/>

        <Button x:Name="squareRootButton"
                Click="squareRootButton_Click"
                Content="√"
                Margin="5"
                Grid.Row="2"
                Grid.Column="2"/>

        <Button x:Name="divideButton"
                Click="operationButton_Click"
                Content="÷"
                Margin="5"
                Grid.Row="2"
                Grid.Column="3"/>

        <!-- 4列目 -->
        <Button x:Name="sevenButton"
                Click="numberButton_Click"
                Content="7"
                Margin="5"
                Grid.Row="3"
                Grid.Column="0"/>

        <Button x:Name="eightButton"
                Click="numberButton_Click"
                Content="8"
                Margin="5"
                Grid.Row="3"
                Grid.Column="1"/>

        <Button x:Name="nineButton"
                Click="numberButton_Click"
                Content="9"
                Margin="5"
                Grid.Row="3"
                Grid.Column="2"/>

        <Button x:Name="multiplyButton"
                Click="operationButton_Click"
                Content="×"
                Margin="5"
                Grid.Row="3"
                Grid.Column="3"/>

        <!-- 5列目 -->
        <Button x:Name="fourButton"
                Click="numberButton_Click"
                Content="4"
                Margin="5"
                Grid.Row="4"
                Grid.Column="0"/>

        <Button x:Name="fiveButton"
                Click="numberButton_Click"
                Content="5"
                Margin="5"
                Grid.Row="4"
                Grid.Column="1"/>

        <Button x:Name="sixButton"
                Click="numberButton_Click"
                Content="6"
                Margin="5"
                Grid.Row="4"
                Grid.Column="2"/>

        <Button x:Name="subtractButton"
                Click="operationButton_Click"
                Content="-"
                Margin="5"
                Grid.Row="4"
                Grid.Column="3"/>

        <!-- 6列目 -->
        <Button x:Name="oneButton"
                Click="numberButton_Click"
                Content="1"
                Margin="5"
                Grid.Row="5"
                Grid.Column="0"/>

        <Button x:Name="twoButton"
                Click="numberButton_Click"
                Content="2"
                Margin="5"
                Grid.Row="5"
                Grid.Column="1"/>

        <Button x:Name="threeButton"
                Click="numberButton_Click"
                Content="3"
                Margin="5"
                Grid.Row="5"
                Grid.Column="2"/>

        <Button x:Name="addButton"
                Click="operationButton_Click"
                Content="+"
                Margin="5"
                Grid.Row="5"
                Grid.Column="3"/>

        <!-- 7列目 -->
        <Button x:Name="zeroButton"
                Click="numberButton_Click"
                Content="0"
                Margin="5"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>

        <Button x:Name="decimalButton"
                Click="decimalButton_Click"
                Content="."
                Margin="5"
                Grid.Row="6"
                Grid.Column="2"/>

        <Button x:Name="equalButton"
                Click="equalButton_Click"
                Content="="
                Margin="5"
                Grid.Row="6"
                Grid.Column="3"/>


    </Grid>
</Window>
